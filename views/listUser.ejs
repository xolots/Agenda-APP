        <p class="mt-4"><a href="/dashboard">Kembali Ke Dashboard</a></p>
        <% if(success && success.length) {%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
                <% if(users) {%>
                    <table
                        class="table table-striped table-bordered table-sm mb-5 table-hover">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center align-middle">EMAIL</th>
                                <th scope="col" class="text-center align-middle">USERNAME</th>
                                <% if(IsAdmin === 'didi') {%>
                                    <th scope="col" class="text-center align-middle"></th>
                                    <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let user of users) {%>
                                <tr>
                                    <th scope="row" class="text-center align-middle">
                                        <%= user.email %>
                                    </th>
                                    <td class="text-center align-middle">
                                        <%= user.username %>
                                    </td>
                                    <% if(IsAdmin==='didi' ) {%>
                                        <td class="text-center align-middle">
                                            <form action="/dashboard/user/<%= user.id %>?_method=delete" method="post">
                                                <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                                data-bs-target="#exampleModal<%= user.id %>">HAPUS</button>

                                                <!-- Modal -->
                                                <div class="modal fade" id="exampleModal<%= user.id %>"
                                                    tabindex="-1" aria-labelledby="exampleModalLabel"
                                                    aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content text-dark">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title"
                                                                    id="exampleModalLabel">Yakin? </h5>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal"
                                                                    aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Apakah Anda Tetap Ingin Menghapus User?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button"
                                                                    class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Close</button>
                                                                <button type="submit"
                                                                    class="btn btn-danger">Hapus</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </td>
                                        <% } %>
                                </tr>

                                <% } %>
