<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Agenda <%= urlPath %>
    </title>
    <link rel="stylesheet" href="bs.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style type="text/css">
        .css-serial {
            counter-reset: serial-number;
            /* Set the serial number counter to 0 */
        }

        .css-serial td:first-child:before {
            counter-increment: serial-number;
            /* Increment the serial number counter */
            content: counter(serial-number);
            /* Display the counter */
        }
    </style>
</head>

<body>

    <div class="container">

        <h2 class="d-flex justify-content-center">Daftar Agenda Bulan <%= urlPath %>
        </h2>
        <p><a href="/dashboard">Kembali Ke Dashboard</a></p>
        <% if(success && success.length) {%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
                <% if(bulan) {%>
                    <table
                        class="table table-dark table-striped table-bordered border-primary table-sm mb-5 table-hover css-serial">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">Date</th>
                                <th scope="col" class="text-center">Month</th>
                                <th scope="col" class="text-center">Time</th>
                                <th scope="col" class="text-center">Daily Agenda</th>
                                <th scope="col" class="text-center">Category</th>
                                <th scope="col" class="text-center">STATUS</th>
                                <th scope="col" class="text-center">Katerangan Hasil</th>
                                <th scope="col" class="text-center">Katerangan Final</th>
                                <th scope="col" class="text-center">Edit</th>
                                <th scope="col" class="text-center">Hapus</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let agenda of bulan) {%>
                                <tr>
                                    <th scope="row" class="text-center">
                                        <%= agenda.date %>
                                    </th>
                                    <td class="text-center">
                                        <%= agenda.month %>
                                    </td>
                                    <td class="text-center">
                                        <%= agenda.time %>
                                    </td>
                                    <td class="text-center">
                                        <%= agenda.dailyAgenda %>
                                    </td>
                                    <td class="text-center">
                                        <%= agenda.category %>
                                    </td>
                                    <td class="text-center">
                                        <% if(agenda.hasil=='DONE' ) {%>
                                            <button class="btn-success">
                                                <%= agenda.hasil %>
                                            </button>
                                            <% }else if(agenda.hasil=='DELAY' ) {%>
                                                <button class="btn-primary delay">
                                                    <%= agenda.hasil %>
                                                </button>
                                                <% }else if(agenda.hasil=='CANCEL' ) {%>
                                                    <button class="btn-danger">
                                                        <%= agenda.hasil %>
                                                            <% }else if(agenda.hasil=='NOT YET' ) {%>
                                                                <button class="btn-secondary">
                                                                    <%= agenda.hasil %>
                                                                        <% }else if(agenda.hasil=='ON-GOING' ) {%>
                                                                            <button class="btn-warning">
                                                                                <%= agenda.hasil %>
                                                                                    <% } %>
                                    </td>
                                    <td class="text-center">
                                        <%= agenda.kateranganHasil %>
                                    </td>
                                    <td class="text-center">
                                        <%= agenda.kateranganFinal %>
                                    </td>

                                    <td>
                                        <!-- <div class="d-flex"> -->
                                        <a href="/dashboard/edit/<%= agenda.id %>"><button
                                                class="btn btn-info">Edit</button></a>
                                        <!-- <div class="invisible">...</div> -->
                                    </td>
                                    <td>
                                        <form action="/dashboard/<%= agenda.id %>?_method=delete" method="post">
                                            <button class="btn btn-danger">Hapus</button>
                                        </form>
                                    </td>
    </div>

    </tr>
    <% } %>
        </tbody>
        </table>
        <% } %>

            <!-- Tambah Data Baru -->






            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>
            <script src="counter.js"></script>


</body>

</html>